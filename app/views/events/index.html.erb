<% content_for :title, "#{@site.name} | Events & activities in your area" %>

<%= render_component "hero", title: @title,
                             subtitle: @site.tagline || "The Community Calendar" %>

<div class="c c--lg-space-after">
  <%= render_component "event_list",
    events: @events,
    pointer: @current_day,
    period: @period,
    sort: @sort,
    repeating: @repeating
  %>
</div>

<%= render_component "meta" do %>
  <%= link_to "Subscribe to #{@title} with iCal", events_url(protocol: :webcal, format: :ics) %>
<% end %>
