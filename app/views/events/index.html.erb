<%= render_component "hero", title: "Events in Hulme & Moss Side",
                             subtitle: "The Community Calendar" %>
                             
<div class="c c--lg-space-after">
  <%= render_component "paginator", pointer: @current_day,
                                    period: @period,
                                    sort: @sort %>

  <% if @events.any? %>
    <ol class="events reset">
      <% @events.each do |event| %>
        <li>
          <%= render_component "event", context: @period,
                                        id:      event.id,
                                        path:    event_path(event),
                                        place:   event.place,
                                        partner: event.partner,
                                        summary: event.summary,
                                        dtstart: event.dtstart,
                                        dtend:   event.dtend,
                                        rrule:   event.rrule,
                                        location: event.location %>
        </li>
      <% end %>
    </ol>
  <% else %>
    <p>No events today ðŸ˜ž</p>
  <% end %>
</div>
