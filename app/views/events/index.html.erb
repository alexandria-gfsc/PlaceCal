<% content_for :title, "Events in Hulme & Moss Side" %>
<%= render_component "hero", title: "Events in Hulme & Moss Side",
                             subtitle: "The Community Calendar" %>
                             
<div class="c c--lg-space-after">
  <%= render_component "event_list", 
    events: @events,
    pointer: @current_day,
    period: @period,
    sort: @sort,
    repeating: @repeating
  %>
</div>

<%= render_component "meta" do %>
  <%= link_to 'Subscribe to events in Hulme & Moss Side with iCal', events_url(protocol: :webcal, format: :ics) %>
<% end %>