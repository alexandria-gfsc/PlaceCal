<% content_for :title, "Partners in Hulme & Moss Side" %>
<%= render_component "hero", title: "Partners in Hulme & Moss Side", subtitle: "The Community Calendar" %>

<div class="c c--lg-space-after">
  <%= render_component "breadcrumb", trail: [['Partners', partners_path]] %>
  <hr>
  <ul class="partners reset two-col">
    <% @partners.each do |partner| %>
      <li>
        <h3><%= link_to partner.name, partner %></h3>
        <div class="place__details">
          <!-- Name of neighbourhood turf for this partner: -->
          <!-- <%= partner.address&.neighbourhood&.name || "nil" %> -->
          <!-- Home neighbourhood for site: -->
          <!-- <%= @home_neighbourhood&.name || "nil" %> -->
        </div>
      </li>
    <% end %>
  </ul>
</div>

<% if @map&.length&.positive? %>
  <%= render_component "map", points: @map %>
<% end %>
