<!DOCTYPE html>
<html>
  <head>
    <title>PlaceCal - <%= content_for?(:title) ? yield(:title) : 'The Community Calendar' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'admin', 'https://fonts.googleapis.com/css?family=Raleway:500,700,800|Trocchi', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin', 'data-turbolinks-track': 'reload' %>

    <%= render "layouts/meta" %>
  </head>

  <body>
    <header>
      <%= render "layouts/admin/admin_navigation" %>
    </header>
    <main>
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
          <%= yield %>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </main>
    <%= yield :first_min_js %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': false %>
    <%= yield :last_min_js %>
  </body>
</html>
