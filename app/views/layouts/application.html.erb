<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if @site.default_site? %>
        PlaceCal - <%= content_for?(:title) ? yield(:title) : 'The Community Calendar' %>
      <% else %>
        <%= @site.name %> - <%= yield(:title) %>
      <% end %>
    </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Raleway:500,700,800|Trocchi', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% if @site&.slug %>
      <%= stylesheet_link_tag "sites/#{@site.slug}", media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>
    <%= stylesheet_link_tag 'print', media: 'print', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= render "layouts/meta" %>
    <%= render "layouts/google_analytics" %>
  </head>

  <body>
    <div class="background">
      <header>
        <%= render_component "navigation", navigation: @navigation %>
      </header>
      <main>
        <%= yield %>
      </main>
      <footer>
        <%= render_component "footer" %>
      </footer>
     </div>
  </body>
</html>
