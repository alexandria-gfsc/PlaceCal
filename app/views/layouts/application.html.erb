<!DOCTYPE html>
<html>
  <head>
    <title>PlaceCal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Raleway:500,700,800|Trocchi', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="icon" type="image/png" href="<%= image_url('favicon.png') %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class="background">
      <header>
        <%= render_component "navigation" %>
      </header>
      <main>
        <%= yield %>
      </main>
      <footer>
        <%= render_component "footer" %>
      </footer>
    </body>
  </div>
</html>
