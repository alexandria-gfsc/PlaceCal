<%= render_component "place", context: :page,
                              id: @place.id,
                              name: @place.name,
                              address: @place.address,
                              description: @place.short_description %>


<%= render_component "paginator", pointer: @current_day,
                                  period: @period,
                                  sort: @sort,
                                  path: "places/#{@place.id}/events" %>                                   
<% if @events.any? %>                                    
  <ol class="events reset">
    <% @events.each do |event| %>
      <li class="event">
        <%= render_component "event", context: :place_page,
                                      id: event.id,
                                      path: event_path(event),
                                      summary: event.summary,
                                      dtstart: event.dtstart,
                                      dtend: event.dtend,
                                      location: event.location %>
      </li>
    <% end %>
  </ol>
<% else %>
  <p>No events with these criteria 😞</p>
<% end %>
                            