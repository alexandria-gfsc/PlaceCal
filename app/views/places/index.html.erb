<% content_for :title, "Places in Hulme & Moss Side" %>
<%= render_component "hero", title: "Places in Hulme & Moss Side", subtitle: "The Community Calendar" %>

<div class="c c--space-after">
  <%= render_component "breadcrumb", trail: [['Places', places_path]] %>

  <hr>

  <ul class="places reset two-col">
    <% @places.each do |place| %>
      <li>
        <h3>
          <%= link_to place.name, place %>
          <div class="turf">
            <span><%= place.address&.neighbourhood&.name %></span>
          </div>
        </h3>
        <% if place.short_description %>
          <div class="place__details">
            <%= markdown place.short_description.split("\n\n", 2)[0] %>

          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<% if @map.length > 0 %>
  <%= render_component "map", points: @map %>
<% end %>
