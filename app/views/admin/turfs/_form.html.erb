<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8">
    <%= form_for @turf, html: { class: "form-horizontal" }, url: (@turf.new_record? ? admin_turfs_path : admin_turf_path) do |f| %>
    <%= render_component "error", object: @turf %>
      <div class="row">
        <div class="col-md-5">
          <label>Name</label>
         <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <label>Slug</label>
         <%= f.text_field :slug, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5" style="margin-top: 20px; margin-bottom: 20px;">
          <label>Turf Type</label>
          <%= f.select :turf_type, options_for_turf_type, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <label>Description</label>
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class= "row" style="margin-top: 80px; margin-bottom: 50px;">
        <div class="col-md-10"></div>
        <div class= "col-md-2">
          <%= f.submit "Save", class: "btn btn-primary " %>
        </div>
      </div>
    <% end %>
  </div>
</div>