<%= render_component "error", object: current_user %>

<div class="form-group">
  <%= render "contact", f: f %>

  <%= f.label :turfs %>
  <%= f.association :turfs, label: false, collection: @turfs, as: :check_boxes %>
  <%= f.association :partners, label: "Partners", collection: options_for_partners, input_html: {class: 'form-control select2' }, include_hidden: false %>

  <%= f.label :role %>
  <%= f.select :role, options_for_select(@roles), class: 'form-control', include_blank: true, selected: @user.role %>
</div>
