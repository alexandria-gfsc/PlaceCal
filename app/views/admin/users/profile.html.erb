<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-8"><h2>Edit Profile</h2></div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= form_for current_user, html: { class: "form-horizontal" } do |f| %>

      <div class="row">
        <div class="col-md-9">
          <%= render_component "error", object: current_user %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <label>First Name</label>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <label>Last Name</label>
            <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <label>Email</label>
            <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <label>Password</label><i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <label>Password Confirmation</label><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <label>Current Password</label> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control"%>
        </div>
      </div>

       <div class="row">
        <div class="col-md-3">
          <%= f.submit "Update", class: "btn btn-primary " %>
        </div>
      </div>



    <% end %>
  </div>
</div>
