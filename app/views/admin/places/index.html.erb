<div class="row">
  <div class="col-md-10">
    <h2>Places List</h2> 
  </div>
  <div class="col-md-2">
    <%= link_to "Add New Place", new_admin_place_path, data: { turbolinks: false }, class: "btn btn-primary " %>   
  </div>
</div>      
<% if @places.blank? %>
  <h3>You have no places</h3>
<% else %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Address</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.id %></td>
        <td><%= place.name %></td>
        <td><%= place.address.full_address rescue nil %></td>
        <td><%= link_to "Edit", edit_admin_place_path(place),  data: { turbolinks: false }, class: "btn btn-primary " %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>