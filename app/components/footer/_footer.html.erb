<div class="footer">
  <div class="c">
    <% if @site&.footer_logo&.present? %>
      <%= image_tag @site.footer_logo %>
    <% else %>
      <%= image_tag 'logo-footer.svg' %>
    <% end %>

    <hr>

    <h5 class="allcaps small">Site Navigation</h5>
    <nav class="footer__nav" role="navigation">
      <ul>
        <li><%= active_link_to "Home", root_path, active: :exclusive %></li>
        <li><%= active_link_to "Events", events_path %></li>
        <li><%= active_link_to "Places", places_path %></li>
        <li><%= active_link_to "Partners", partners_path %></li>
        <li><%= active_link_to "Bus", bus_path %></li>
      </ul>
    </nav>

    <div class="g">
      <div class="gi gi__1-5">
        <% if @site&.site_admin %>
          <h5 class="allcaps small"><%= @site.name %> Enquiries</h5>
            <p>
              <%= @site.site_admin.full_name %><br><br>
              <strong>T:</strong> <%= @site.site_admin.phone %><br>
              <strong>E:</strong> <%= mail_to @site.site_admin.email %>
            </p>
        <% end %>
      </div>
      <div class="gi gi__2-5">
        <h5 class="allcaps small">General Enquiries</h5>
        <p>
          Get in touch!<br><br>
          <strong>T:</strong> +44 (0)161 247 6954<br>
          <strong>E:</strong> <%= mail_to 'support@placecal.org' %>
        </p>
        <p>
          PlaceCal ℅‎ PHASE<br>
          Chatham 510, Manchester School of Architecture<br>
          Cavendish Street, Manchester, M15 6BR
        </p>
        <p>
          © 2017 Geeks For Social Change<br>
          Build: <tt><%= ENV['GIT_REV'][0,7] if ENV['GIT_REV'] %></tt>
        </p>
      </div>
    </div>

    <% if @site&.supporters %>
      <hr>

      <h5 class="allcaps small"> PlaceCal <%= @site.name %> Supporters</h5>
      <ul class="footer__supporters footer__supporters--main">
        <% @site&.supporters&.each do |supporter| %>
          <li class="footer__supporter footer__supporter--<%= supporter.name.parameterize %>" style="background-image: url(<%= supporter.logo %>)">
            <%= link_to supporter.name, supporter.url %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <hr>

    <h5 class="allcaps small">PlaceCal Supporters</h5>
    <ul class="footer__supporters footer__supporters--main">
      <% @global_supporters&.each do |supporter| %>
        <li class="footer__supporter footer__supporter--<%= supporter.name.parameterize %>" style="background-image: url(<%= supporter.logo %>)">
          <%= link_to supporter.name, supporter.url %>
        </li>
      <% end %>
    </ul>

    <hr>

  </div>

  <% if Rails.env.development? %>
    <pre class="small">
      <%= debug(params) %>
      <%# console %>
    </pre>
  <% end %>
</div>
