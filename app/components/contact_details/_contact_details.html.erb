<p class="contact_details">
  <% if phone.present? %>
    <strong>T:</strong> <span><%= link_to phone, "tel:#{phone}", { property: 'telephone' } %></span>
  <% end %>
  <% if email.present? %>
    <strong>E:</strong> <span><%= mail_to email, email, { property: 'email' } %></span>
  <% end %>
  <% if url.present? %>
    <strong>W:</strong> <span><%= link_to strip_url(url), url, { property: 'url' } %></span>
  <% end %>
  <% if facebook_link.present? %>
    <strong>F:</strong> <span><%= link_to strip_url(facebook_link), facebook_link %></span>
  <% end %>
  <% if twitter_handle.present? %>
    <strong>T:</strong> <span><%= link_to "@#{twitter_handle}", twitter_link %></span>
  <% end %>
  <% unless contact? %>
    No contact information - let us know!
  <% end %>
</p>
