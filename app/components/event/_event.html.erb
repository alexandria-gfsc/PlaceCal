<% if page? %>
  <h1><%= summary %></h1>
  <time><%= dtstart %> - <%= dtend %></time>
  <%= markdown description %>
<% else %>
  <li class="event">
    <h3><%= link_to summary, event_path(properties[:id]) %></h3>
    <p>
        🕒 <time><%= dtstart %> &mdash; <%= dtend %></time>
        📍 <% if properties[:place] %>
            <%= link_to properties[:place], place_path(properties[:place]) %>
          <% elsif properties[:location] %>
            <%= properties[:location].split(",").first.gsub("\\", "") %>
          <% end %>
    </p>
  </li>
<% end %>
