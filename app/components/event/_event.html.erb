<div class="event <%= page? ? 'event--full' : 'event--list' %>">
  <article>
    <% if page? %>
      <%= render_component "hero", title: summary %>
        <div class="c">
    <% else %>
      <div class="event__header">
        <h3 itemprop="name"><%= link_to summary, event_path(id) %></h3>
        <% if turf_name %>
          <div class="event__turf">
            <span><%= turf_name %></span>
            <!-- <%= if home_turf? then "Home turf!" else "Not home turf." end %> -->
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="event__details">
      <div class="event__detail event__time">
        <span class="icon icon--time">üïí</span>
        <%= time %>
      </div>
      <% if duration %>
        <div class="event__detail event__duration">
          <span class="icon icon--duration">‚åõ</span>
          <%= duration %>
        </div>
      <% end %>
      <div class="event__detail event__date">
        <span class="icon icon--date">üìÖ</span>
        <%= date %>
      </div>
      <% if place || location %>
        <div class="event__detail event__location">
          <span class="icon icon--place">üè†</span>
          <% if place %>
            <%= link_to place, place_path(place) %>
          <% elsif location %>
            <%= location %>
          <% end %>
        </div>
      <% end %>
      <% if repeats %>
        <div class="event__detail event__repeats">
          <span class="icon icon--repeats">üîÅ</span>
          <%= repeats %>
        </div>
      <% end %>
    </div>
    <% if page? %>
      </div> <!-- </div class="c"> -->
    <% end %>
  </article>
</div>
